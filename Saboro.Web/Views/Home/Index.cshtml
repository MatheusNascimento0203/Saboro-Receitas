@{
    Layout = "_Layout";
    ViewData["Title"] = "Home Page";
}

<div class="uk-margin-medium-top container-principal uk-margin-xlarge-left"">
    <div class=" uk-flex uk-flex-middle uk-flex-between">
    <div>
        <h3 class="uk-margin-remove-bottom">Minhas Receitas</h3>
        <p class="uk-margin-remove-top">Gerencie suas receitas culinárias</p>
    </div>
    <div>
        <div class="">
            <button href="" class="uk-flex uk-flex-middle uk-border-rounded container-botao-adicionar">
                <i class="icone-adicionar uk-margin-small-right"></i>
                Nova Receita
            </button>
        </div>
    </div>
</div>
<div class="uk-inline uk-width-1-3@m uk-flex">
    <span class="uk-form-icon" uk-icon="icon: search"></span>
    <input type="search" id="pesquisar-receita" name="pesquisar" class="uk-input uk-border-rounded focus-input"
        placeholder="Buscar receitas..." />
</div>
<div class="container-card-informacoes">
    <div class="card-informacoes uk-flex uk-flex-middle">
        <i class="icone-logo-header uk-margin-medium-left"></i>
        <div class="uk-margin-small-left">
            <p class="uk-margin-remove-bottom texto-informacoes">Total de Receitas</p>
            <p class="uk-margin-remove-top uk-margin-remove-bottom resultado-informacoes">3</p>
        </div>
    </div>
    <div class="card-informacoes uk-flex uk-flex-middle">
        <i class="icone-relogio-info uk-margin-medium-left"></i>
        <div class="uk-margin-small-left">
            <p class="uk-margin-remove-bottom texto-informacoes">Tempo Médio</p>
            <p class="uk-margin-remove-top uk-margin-remove-bottom resultado-informacoes">3</p>
        </div>
    </div>
    <div class="card-informacoes uk-flex uk-flex-middle">
        <i class="icone-duplo-user uk-margin-medium-left"></i>
        <div class="uk-margin-small-left">
            <p class="uk-margin-remove-bottom texto-informacoes">Porções Totais</p>
            <p class="uk-margin-remove-top uk-margin-remove-bottom resultado-informacoes">3</p>
        </div>
    </div>
</div>
<div class="container-card-receitas uk-margin-medium-bottom">
    <div class="card-receitas">
        <div
            class="uk-margin-medium-left uk-flex uk-flex-between uk-flex-middle uk-margin-medium-right uk-margin-medium-top">
            <p class="titulo-receita uk-margin-remove-bottom">Lasanha à Bolonhesa</p>
            <div class="badge">
                <p class="uk-margin-remove-bottom">Médio</p>
            </div>
        </div>
        <p class="uk-margin-medium-left uk-margin-remove-bottom uk-margin-small-top descricao-receita">Deliciosa lasanha
            tradicional com molho bolonhesa
            caseiro</p>
        <div class="uk-flex uk-flex-middle uk-flex-between uk-margin-medium-right uk-margin-small-top">
            <div class="uk-flex uk-flex-middle uk-margin-medium-left">
                <i class="icone-relogio-receita"></i>
                <p class="uk-margin-remove-bottom uk-margin-remove-top uk-margin-small-left font-media">45 min</p>
            </div>
            <div class="uk-flex uk-flex-middle uk-margin-medium-left">
                <i class="icone-duplo-user-receita"></i>
                <p class="uk-margin-remove-bottom uk-margin-remove-top  uk-margin-small-left font-media">4 porções</p>
            </div>
        </div>
        <div class="badge-tipo-receita uk-margin-medium-left uk-margin-small-top ">
            <p class="uk-margin-remove-bottom">Massas</p>
        </div>
        <div class="uk-margin-small-top uk-margin-medium-left uk-flex container-botoes-receita uk-margin-medium-right uk-margin-small-bottom">
            <button href="" class=" uk-flex uk-flex-middle uk-flex-center uk-border-rounded container-botao-visualizar">
                <i class="icone-visualizar-receita uk-margin-small-right"></i>
                Ver
            </button>
            <button class="uk-flex uk-flex-middle uk-flex-center container-botao-editar-excluir uk-border-rounded"><i class="icone-editar"></i></button>
            <button class="uk-flex uk-flex-middle uk-flex-center container-botao-editar-excluir uk-border-rounded"><i class="icone-excluir"></i></button>
        </div>
    </div>
</div>
</div>
